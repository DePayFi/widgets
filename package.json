{
  "name": "depay-widgets",
  "moduleName": "DePayWidgets",
  "version": "2.22.2",
  "description": "Accept and perform crypto payments with DePay widgets. Simple Decentralized Payments.",
  "main": "./dist/cjs/index.js",
  "files": [
    "dist"
  ],
  "repository": "git@github.com:depayfi/depay-widgets.git",
  "keywords": [
    "blockchain",
    "payment",
    "widgets",
    "react",
    "web3",
    "crypto",
    "cryptocurrencies"
  ],
  "author": "DePay",
  "license": "MIT",
  "scripts": {
    "build": "npx rollup --config rollup.module.config.js && npx rollup --config rollup.bundle.config.js",
    "lint": "eslint \"src/**/*.{js,ts,tsx}\"",
    "lint:fix": "eslint \"src/**/*.{js,ts,tsx}\" --fix",
    "format": "prettier src --write",
    "prepublishOnly": "yarn build",
    "dev": "npx rollup -c rollup.dev.config.js -w",
    "test:cypress": "yarn cypress run",
    "test:cypress:debug": "yarn cypress run --headed --no-exit",
    "test:jest": "npx jest --no-cache",
    "test": "yarn test:jest && yarn test:cypress"
  },
  "dependencies": {
    "@depay/walletconnect": "^1.0.2",
    "depay-local-currency": "^1.1.0",
    "depay-react-dialog-stack": "^2.1.0",
    "depay-react-shadow-dom": "^2.0.2",
    "depay-react-token-image": "^1.1.3",
    "depay-web3-assets": "^2.2.0",
    "depay-web3-blockchains": "^2.6.0",
    "depay-web3-client": "^6.0.0",
    "depay-web3-constants": "^3.0.1",
    "depay-web3-exchanges": "^6.2.2",
    "depay-web3-payments": "^6.3.5",
    "depay-web3-tokens": "^6.0.0",
    "depay-web3-wallets": "^5.7.3",
    "react-rangeslider": "^2.2.0"
  },
  "peerDependencies": {
    "ethers": "^5.4.6",
    "react": "^17",
    "react-dom": "^17"
  },
  "devDependencies": {
    "@babel/core": "^7.12.9",
    "@babel/plugin-transform-runtime": "^7.14.5",
    "@babel/preset-env": "^7.12.7",
    "@babel/preset-react": "^7.12.7",
    "@cypress/react": "^5.9.1",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@rollup/plugin-replace": "^2.3.4",
    "@rollup/plugin-sucrase": "^3.1.0",
    "babel-loader": "^8.2.2",
    "babel-preset-env": "^1.7.0",
    "babel-preset-react": "^6.24.1",
    "cypress": "^7.6.0",
    "depay-web3-mock": "^8.2.7",
    "eslint": "^7.15.0",
    "eslint-loader": "^4.0.2",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "ethers": "^5.4.6",
    "fetch-mock": "^9.11.0",
    "react": "^17.0.1",
    "react-dom": "^17",
    "regenerator-runtime": "^0.13.7",
    "rollup": "^2.34.2",
    "rollup-plugin-delete": "^2.0.0",
    "rollup-plugin-livereload": "^2.0.0",
    "rollup-plugin-polyfill-node": "^0.7.0",
    "rollup-plugin-serve": "^1.1.0",
    "rollup-plugin-terser": "^7.0.2"
  }
}
